---
title: Menrva - Note assistant 2

contentClassName: p-assistant
dataPageName: assistant2
login: false
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#assistant.assistant
      .assistant__wrapper
        a.assistant__circle(href="#" class="" title="" assistant-js)
          i.icon-font.icon-bubble

        .assistant__block
          .assistant__block-head
            div
              p!= "Note assistant"
            div
              a.assistant__block-btn.assistant__block-btn--full(href="" class="" title="")
                i.icon-font.icon-fullscreen

          .assistant__block-body
            .assistant__block-left
            .assistant__block-middle
              .assistant__chat
                .assistant__chat-body
                  div
                    .assistant__chat-user
                      div
                        .assistant__chat-img
                          img(src="./img/img-user-0.png" srcset="./img/img-user-0@2x.png 2x" alt="" title="")
                      div
                        .assistant__chat-message
                          div
                            p!= "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum"
                  div
                    .assistant__chat-info
                      div
                        a.assistant__block-btn.assistant__block-btn--arrow(href="" class="" title="")
                          i.icon-font.icon-arrow-view
                      div
                        .assistant__chat-message
                          div
                            p!= "Lorem Ipsum is simply dummy text of the printing and typesetting industry"
                          div
                            a.assistant__block-btn.assistant__block-btn--like(href="" class="" title="")
                              i.icon-font.icon-like
                            span!= "11k"
                            a.assistant__block-btn.assistant__block-btn--like.is-active(href="" class="" title="")
                              i.icon-font.icon-like

                      div
                        a.assistant__block-btn.assistant__block-btn--arrow(href="" class="" title="")
                          i.icon-font.icon-arrow-view

                form.assistant__chat-control
                  div
                    a.assistant__block-btn.assistant__block-btn--keyboard(href="" class="" title="")
                      i.icon-font.icon-keyboard
                  div
                    .form__field.form__field--input
                      .form__input-wrap
                        input.form__input(type="text" name="" placeholder="Type message")
                      .form__notify.form__notify--hide
                  div
                    button.c-btn.c-btn--lightGray(type="button")!= "Send"


            .assistant__block-right