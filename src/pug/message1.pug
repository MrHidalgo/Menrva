---
title: Menrva - Messages

contentClassName: p-messages
dataPageName: message1
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#section.section
      .c-grid
        .section__wrapper
          .section__wrapper-left
            include ./macros/_menuMessages

          .section__wrapper-right

            .section__title.section__title--messages
              .section__title-wrap
                .section__title-left
                  .section__title-icon
                    i.icon-font.icon-message-unread
                  span!= "Messages"

                .section__title-right
                  .notes__search
                    input.notes__search-input(type="text" name="" placeholder="Search notes")
                    button.notes__search-btn(type="submit")
                      i.icon-font.icon-search
                    a.notes__search-clear(
                    href="#"
                    title="" class=""
                    )
                      i.icon-font.icon-error


            .section__subtitle.section__subtitle--messages
              .section__subtitle-wrap
                .section__subtitle-left
                .section__subtitle-right
                  a(href="#" class="" title="")
                    .section__subtitle-icon
                      i.icon-font.icon-messages-new
                    span!= "New message"


            .message
              .message__block.message__block-0.section__block.is-new
                .message__block-left
                  .message__block-user
                    div
                      .message__block-img
                        img(src="./img/img-user-0.png" srcset="./img/img-user-0@2x.png 2x" alt="" title="")
                    div
                      p!= "Olga Griffith"
                      span!= "Lorem Ipsum is simply dummy tex"

                .message__block-right
                  a(href="#" title="" class="")
                    i.icon-font.icon-recent
                    span!= "1 day ago"

                  .c-dropdown.ml-4
                    .dropdown
                      a.dropdown__btn(href="#" id="messageBlock0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        span
                        span
                        span
                      .dropdown-menu.dropdown-menu-right(aria-labelledby="messageBlock0")
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-message-all
                          span!= "Archive"
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-remove
                          span!= "Remove"

              .message__block.message__block-1.section__block
                .message__block-left
                  .message__block-user
                    div
                      .message__block-img
                        img(src="./img/img-user-0.png" srcset="./img/img-user-0@2x.png 2x" alt="" title="")
                    div
                      p!= "Olga Griffith"
                      span!= "Lorem Ipsum is simply dummy tex"

                .message__block-right
                  a(href="#" title="" class="")
                    i.icon-font.icon-recent
                    span!= "1 day ago"

                  .c-dropdown.ml-4
                    .dropdown
                      a.dropdown__btn(href="#" id="messageBlock1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        span
                        span
                        span
                      .dropdown-menu.dropdown-menu-right(aria-labelledby="messageBlock1")
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-message-all
                          span!= "Archive"
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-remove
                          span!= "Remove"


