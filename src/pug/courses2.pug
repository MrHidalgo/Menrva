                    option(value="1")!= "Some courses title name"
                    option(value="1")!= "Some courses title name"
                  span.select__icon-wrap
                    i.icon-font.icon-arrow

            .form__field.form__field--input
              label.form__label(for="1")!= "Description"
              .form__input-wrap
                input.form__input(type="text" id="1" name="1" placeholder="Enter description")
              .form__notify.form__notify--hide

            .form__field.form__field--btn
              button.form__btn(type="submit")!= "Create a course"