mixin btnStar()
  .c-dropdown
    a(href="#" id="toolStar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
      i.icon-font.icon-star
    .dropdown-menu.dropdown-menu-left.up(aria-labelledby="toolStar")
      a.dropdown-item(href="#")
        div
          i.icon-font.icon-star
        span!= "All"
      a.dropdown-item(href="#")
        div
          i.icon-font.icon-star-fill
        span!= "Starred"

mixin btnSwitcher()
  a(href="#" title="" class="")
    i.icon-font.icon-switcher

