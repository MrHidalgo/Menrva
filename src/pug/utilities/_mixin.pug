      a.dropdown-item(href="#")
        span!= "Increase level"
        div
          i.top
      a.dropdown-item(href="#")
        span!= "Decrease level"
        div
          i.bottom
      a.dropdown-item(href="#")
        span!= "Previous card"
        div
          i.left
      a.dropdown-item(href="#")
        span!= "Next card"
        div
          i.right
      a.dropdown-item(href="#")
        span!= "Switch mode"
        div
          span!= "Z"
      a.dropdown-item(href="#")
        span!= "All words"
        div
          span!= "SPACE"
      a.dropdown-item(href="#")
        span!= "Autoplay"
        div
          span!= "A"
      a.dropdown-item(href="#")
        span!= "Star"
        div
          span!= "S"
      a.dropdown-item(href="#")
        span!= "Shuffle"
        div
          span!= "D"
      a.dropdown-item(href="#")
        span!= "Edit"
        div
          span!= "E"
      a.dropdown-item(href="#")
        span!= "Full screen"
        div
          span!= "F"
      a.dropdown-item(href="#")
        span!= "Reverse"
