---
title: Menrva - Classes join or create

contentClassName: p-classes
dataPageName: classes29
login: true
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#section.section
      .c-grid
        .section__wrapper
          .section__wrapper-left
            include ./macros/_menuClassMember

          .section__wrapper-right

            .classes.classes--admin.classes--join
              .classes__wrapper
                .classes__row.classes__row-0
                  .classes__title
                    .classes__title-left
                      .classes__title-user
                        div
                          i
                            img(src="./img/img-user-0.png" srcset="./img/img-user-0@2x.png 2x" alt="" title="")

                        div
                          p!= "Lorem ipsum (Guest view)"
                          span!= "Institution name"

                    .classes__title-right
                      a.c-btn.c-btn--darkGreen(href="#" class="" title="")!= "Cancel request"
                      .c-dropdown
                        .dropdown
                          a.dropdown__btn(href="#" id="1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            span
                            span
                            span
                          .dropdown-menu.dropdown-menu-right(aria-labelledby="1")
                            a.dropdown-item(href="#")
                              div
                                i.icon-font.icon-info
                              span!= "Report"

                  .classes__desc
                    p!= "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make"


                .classes__row.classes__row-1

                  .section__subtitle.section__subtitle--classes
                    .section__subtitle-wrap
                      .section__subtitle-left
                        .section__subtitle-icon
                          i.icon-font.icon-notes
                        span!= "120 Notes"

                      .section__subtitle-right

                .classes__row.classes__row-2

                  .notes__box-wrapper
                    each val, idx in [1,2,3]
                      .notes__box(class!= "notes__box-" + idx)
                        .notes__box-left
                        .notes__box-middle
                          p.notes__box-title!= "Note " + val
                          .notes__box-info
                            a(href="#" title="" class="")
                              i.icon-font.icon-select
                              span!= "12K"
                            a(href="#" title="" class="")
                              i.icon-font.icon-like
                              span!= "567"
                            a(href="#" title="" class="")
                              i.icon-font.icon-save
                              span!= "67"
                            a(href="#" title="" class="")
                              i.icon-font.icon-profile
                              span!= "Owner Name"
                            a(href="#" title="" class="")
                              i.icon-font.icon-recent
                              span!= "1 year ago"

                        .notes__box-right
                          .notes__box-drop.c-dropdown
                            .dropdown
                              a.dropdown__btn(href="#" id="classNotes-" + idx data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                span
                                span
                                span
                              .dropdown-menu.dropdown-menu-right(aria-labelledby="classNotes-" + idx)
                                a.dropdown-item(href="#")
                                  div
                                    i.icon-font.icon-edit
                                  span!= "Edit"
                                a.dropdown-item(href="#")
                                  div
                                    i.icon-font.icon-export-2
                                  span!= "Export"
                                a.dropdown-item(href="#")
                                  div
                                    i.icon-font.icon-remove
                                  span!= "Remove"
