---
title: Menrva - Book

contentClassName: notes
dataPageName: notes3
login: true
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#section.section
      .c-grid
        .section__wrapper
          .section__wrapper-left
            include ./macros/_menuMain

          .section__wrapper-right

            .section__title.section__title--notes
              .section__title-wrap
                .section__title-left
                  .section__title-icon
                    i.icon-font.icon-bill
                  span!= "Note Name (Book example)"

                .section__title-right
                  a(href="#" title="" class="")
                    i.icon-font.icon-notify
                  a(href="#" title="" class="ml-3")
                    i.icon-font.icon-edit
                  a(href="#" title="" class="ml-3")
                    i.icon-font.icon-info

                  .c-dropdown.ml-4
                    .dropdown
                      a.dropdown__btn(href="#" id="notesFlashcardTitle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        span
                        span
                        span
                      .dropdown-menu.dropdown-menu-right(aria-labelledby="notesFlashcardTitle")
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-edit
                          span!= "Edit"
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-star-full
                          span!= "Set as primary"
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-remove
                          span!= "Remove"

            .bill
              .bill__wrapper
                .bill__row.bill__row-0.bill__row--info
                  a(href="#" title="" class="")
                    i.icon-font.icon-profile
                    span!= "Owner name"
                  a(href="#" title="" class="")
                    i.icon-font.icon-select
                    span!= "12K"
                  a(href="#" title="" class="")
                    i.icon-font.icon-like
                    span!= "567"
                  a(href="#" title="" class="")
                    i.icon-font.icon-save
                    span!= "67"
                  a(href="#" title="" class="")
                    i.icon-font.icon-recent
                    span!= "1 year ago"

                .bill__row.bill__row-1.bill__row--view
                .bill__row.bill__row-2.bill__row--book.bill__row--info
                  a(href="#" title="" class="")
                    .forum__box-badge
                    span!= "Comments (<i>5</i>)"
