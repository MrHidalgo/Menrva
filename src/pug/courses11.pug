---
title: Menrva - Courses Sort by

contentClassName: p-courses
dataPageName: courses11
login: true
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#section.section
      .c-grid
        .section__wrapper
          .section__wrapper-left
            include ./macros/_menuNotes

          .section__wrapper-right

            .section__title.section__title--notes
              .section__title-wrap
                .section__title-left
                  .section__title-icon
                    i.icon-font.icon-folder
                  span!= "Courses"

                .section__title-right
                  .notes__search
                    input.notes__search-input(type="text" name="" placeholder="Search notes")
                    button.notes__search-btn(type="submit")
                      i.icon-font.icon-search
                    a.notes__search-clear(
                    href="#"
                    title="" class=""
                    )
                      i.icon-font.icon-error

                  .c-dropdown
                    a(href="#" id="createNotesMain1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                      i.icon-font.icon-folder-add
                    .dropdown-menu.dropdown-menu-right(aria-labelledby="createNotesMain1")
                      a.dropdown-item(href="#")
                        span!= "Book"
                      a.dropdown-item(href="#")
                        span!= "Passage"
                      a.dropdown-item(href="#")
                        span!= "Flashcards"

            .section__subtitle.section__subtitle--classes
              .section__subtitle-wrap
                .section__subtitle-left
                  .section__subtitle-icon
                    i.icon-font.icon-courses
                  span!= "3 Courses"

                .section__subtitle-right
                  .c-dropdown
                    a(href="#" id="sortBy" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                      span!= "Sort by: <span>Custom</span>"
                      i.icon-font.icon-arrow
                    .dropdown-menu.dropdown-menu-right(aria-labelledby="sortBy")
                      a.dropdown-item(href="#")
                        span!= "Sort A to Z"
                      a.dropdown-item(href="#")
                        span!= "Sort by date"
                      a.dropdown-item(href="#")
                        span!= "Custom"
                      a.dropdown-item(href="#")
                        span!= "Default"


            .notes__box-wrapper
              each val, idx in [1,2,3]
                .notes__box.notes__box--sortCustom
                  a.notes__box-drag(href="#" class="" title="")
                    i.icon-font.icon-drag
                  .notes__box-left
                  .notes__box-middle
                    p.notes__box-title!= "Lorem Ipsum is simply dummy"
                    .notes__box-info
                      a(href="#" title="" class="")
                        i.icon-font.icon-select
                        span!= "12K"
                      a(href="#" title="" class="")
                        i.icon-font.icon-like
                        span!= "567"
                      a(href="#" title="" class="")
                        i.icon-font.icon-save
                        span!= "67"
                      a(href="#" title="" class="")
                        i.icon-font.icon-profile
                        span!= "Owner Name"
                      a(href="#" title="" class="")
                        i.icon-font.icon-recent
                        span!= "1 year ago"

                  .notes__box-right
                    .notes__box-drop.c-dropdown
                      .dropdown
                        a.dropdown__btn(href="#" id="notesBox0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                          span
                          span
                          span
                        .dropdown-menu.dropdown-menu-right(aria-labelledby="notesBox0")
                          a.dropdown-item(href="#")
                            div
                              i.icon-font.icon-export-2
                            span!= "Export"
                          a.dropdown-item(href="#")
                            div
                              i.icon-font.icon-info
                            span!= "Report"
