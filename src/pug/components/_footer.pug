footer#footer.footer
  .c-grid
    .footer__wrapper
      .footer__wrapper-top
        .row
          .footer__col.footer__col-0.col-2.text-center
            +logotypeText("footer", "", "Menrva")

          .footer__col.footer__col-1.col-2
            p.nav__title!= "About"
            +nav('footer', dataObj.navFooter0)

          .footer__col.footer__col-2.col-2
            p.nav__title!= "Connect"
            +nav('footer', dataObj.navFooter1)

          .footer__col.footer__col-3.col-2
            p.nav__title!= "More"
            +nav('footer', dataObj.navFooter2)

          .footer__col.footer__col-4.col-4
            p!= "Do you have a question? Send us a word."
            a(
              href="mailto:support@menrva.com"
              title="" class=""
            )!= "support@menrva.com"

            .social.d-flex.align-items-center
              a(
                href="#"
                title="" class=""
              )
                i.icon-font.icon-i-fb
              a(
                href="#"
                title="" class=""
              )
                i.icon-font.icon-i-gp


      .footer__wrapper-bottom.d-flex.align-items-center.justify-content-end
        //.copyright
        //  p!= "Â© 2018 Menrva All rights reserved"

        .dropdown
          button(class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
            span!= "English"
            i.icon-font.icon-arrow
          .dropdown-menu.dropdown-menu-right(aria-labelledby="dropdownMenuButton")
            a(
              href="#"
              title="" class="dropdown-item"
            )!= "Action"
            a(
              href="#"
              title="" class="dropdown-item"
            )!= "Another action"
            a(
              href="#"
              title="" class="dropdown-item"
            )!= "Something else here"

