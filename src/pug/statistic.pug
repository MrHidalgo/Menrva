---
title: Menrva - Statistic

contentClassName: p-statistic
dataPageName: statistic
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#section.section
      .c-grid
        .section__wrapper
          .section__wrapper-left
            include ./macros/_menuMain

          .section__wrapper-right

            .section__title.section__title--statistic
              .section__title-wrap
                .section__title-left
                  .section__title-icon
                    i.icon-font.icon-statistics
                  span!= "Statistic"

                .section__title-right
                  .c-dropdown.ml-4
                    .dropdown
                      a.dropdown__btn(href="#" id="statisticTitle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        span
                        span
                        span
                      .dropdown-menu.dropdown-menu-right(aria-labelledby="statisticTitle")
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-export-2
                          span!= "Export"

            .statistic
              .statistic__wrapper
                .notes__box.notes__box--statistic
                  .notes__box-left
                  .notes__box-middle
                    .notes__box-info
                      a(href="#" title="" class="")
                        i.icon-font.icon-recent
                        span!= "Last review: 1 year ago"

                    p.notes__box-title!= "Lorem Ipsum is simply dummy text of the printing"

                    .notes__box-details
                      p!= "Session length: <span>6:02.30</span>"
                      p!= "Average wpm: <span>120</span>"
                      p!= "Highest memorization level: <span>120</span>"

                  .notes__box-right
                    a(href="#" class="" title="")
                      i.icon-font.icon-fullscreen

              .statistic__wrapper
                .statistic__box.section__block
                  .statistic__box-left
                    p!= "Memorized per minute"
                    img(srcset="./img/img-notes-graph-0.png, ./img/img-notes-graph-0@2x.png 2x" alt="" title="")

                  .statistic__box-right
                    p!= "Memorization levels"
                    img(srcset="./img/img-notes-graph-1.png, ./img/img-notes-graph-1@2x.png 2x" alt="" title="")

