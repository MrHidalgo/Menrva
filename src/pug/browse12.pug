---
title: Menrva - Browse note info 3

contentClassName: p-browse
dataPageName: browse12
login: true
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#c-modal.c-modal.c-modal--browseInfo
      .c-modal__wrapper
        .c-modal__header.d-flex.align-items-center
          p.c-modal__title.subtitle!= "Information"
          a.c-modal__close(href="#" title="" class="")
            i.icon-font.icon-error

        .c-modal__body

          .browse
            .browse__wrapper
              .browse__user
                .browse__user-left
                  .browse__user-img
                    img(src="./img/img-user-0.png" srcset="./img/img-user-0@2x.png 2x" alt="" title="")

                .browse__user-right
                  p!= "James David"
                  span!= "Owner"

            .browse__wrapper
              .browse__info-wrapper
                a.browse__info.is-active(href="#" class="" title="")
                  p!= "60"
                  span!= "Followers"
                a.browse__info(href="#" class="" title="")
                  p!= "10"
                  span!= "Courses"

              .browse__wrapper
                .browse__courses-wrapper
                  a.browse__courses(href="#" class="" title="")!= "Course 1"
                  a.browse__courses(href="#" class="" title="")!= "Course 2"
                  a.browse__courses(href="#" class="" title="")!= "Course 3"
                  a.c-btn.c-btn--darkGreen.c-btn--bigH(href="#" class="" title="")!= "Show more"

            .browse__wrapper
              .browse__desc-wrapper
                div.browse__desc
                  p!= "Viewable by"
                  span!= "Everyone"
                div.browse__desc
                  p!= "Language"
                  span!= "English"
                div.browse__desc
                  p!= "Created"
                  span!= "1 year ago"