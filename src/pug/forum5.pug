contentClassName: trial
dataPageName: forum5
login: true
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#c-modal.c-modal.c-modal--forum
      .c-modal__wrapper
        .c-modal__header.d-flex.align-items-center
          p.c-modal__title.subtitle!= "Create a topic"
          a.c-modal__close(href="#" title="" class="")
            i.icon-font.icon-error

        .c-modal__body

          form.form(action="" method="")
            label.form__label()!= "Topic"
            .form__field.form__field--select
              .form__select-wrap
                .form__select
                  span.select__value
                  select(name="")
                    option(value="0" disabled selected hidden)!= "Pick a discussion topic"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                    option(value="1")!= "Some topic title name"
                  span.select__icon-wrap
                    i.icon-font.icon-arrow

            .form__field.form__field--input
              label.form__label(for="forumTopicTitle")!= "Title"
              .form__input-wrap
                input.form__input(type="text" id="forumTopicTitle" name="forumTopicTitle" placeholder="Type topic title")
              .form__notify.form__notify--hide

            .form__field.form__field--textarea
              label.form__label(for="forumTopicDescription")!= "Description"
              .form__textarea-wrap
                textarea.form__textarea(id="forumTopicDescription" name="forumTopicDescription" placeholder="Type description")
              .form__notify.form__notify--hide

            .form__field.form__field--btn
              button.form__btn(type="submit")!= "Create"

