---
title: Menrva - Browse filter

contentClassName: p-browse
dataPageName: browse2
login: true
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#section.section
      .c-grid
        .section__wrapper
          .section__wrapper-left
            include ./macros/_menuBrowse

          .section__wrapper-right

            .section__title.section__title--browse
              .section__title-wrap
                .section__title-left
                  .section__title-icon
                    i.icon-font.icon-browse
                  span!= "Browse"

                .section__title-right
                  .notes__search
                    input.notes__search-input(type="text" name="" placeholder="Search note")
                    button.notes__search-btn(type="submit")
                      i.icon-font.icon-search
                    a.notes__search-clear(
                    href="#"
                    title="" class=""
                    )
                      i.icon-font.icon-error

            .section__subtitle.section__subtitle--search
              .section__subtitle-wrap
                .section__subtitle-left
                  .section__subtitle-icon
                    i.icon-font.icon-notes
                  span!= "120 Notes"

                .section__subtitle-right
                  a(
                  href="#"
                  title="" class=""
                  )
                    i.icon-font.icon-filter
                    span!= "Filter"


            .search__filter
              .search__filter-wrapper
                .search__filter-left
                  p.search__filter-title!= "Upload Date"

                  ul
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "Today"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "This week"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "This month"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "This year"

                .search__filter-middle
                  p.search__filter-title!= "Type"

                  ul
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "All"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "Books"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "Passages"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "Flashcards"

                .search__filter-right
                  p.search__filter-title!= "Popularity"

                  ul
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "Views"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "Likes"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "Saves"
                    li
                      a(
                      href="#"
                      title="" class=""
                      )!= "Comments"

            .browse
              .notes__box-wrapper
                each val, idx in [0,1,2,3,4,5,6]
                  .notes__box(class!= "notes__box-" + idx)
                    .notes__box-left
                    .notes__box-middle
                      p.notes__box-title!= "Lorem Ipsum is simply dummy"
                      .notes__box-info
                        a(href="#" title="" class="")
                          i.icon-font.icon-select
                          span!= "12K"
                        a(href="#" title="" class="")
                          i.icon-font.icon-like
                          span!= "567"
                        a(href="#" title="" class="")
                          i.icon-font.icon-save
                          span!= "67"
                        a(href="#" title="" class="")
                          i.icon-font.icon-profile
                          span!= "Owner Name"
                        a(href="#" title="" class="")
                          i.icon-font.icon-recent
                          span!= "1 year ago"

                    .notes__box-right
                      .notes__box-drop.c-dropdown
                        .dropdown
                          a.dropdown__btn(href="#" id="browse-" + idx data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            span
                            span
                            span
                          .dropdown-menu.dropdown-menu-right(aria-labelledby="browse-" + idx)
                            a.dropdown-item(href="#")
                              div
                                i.icon-font.icon-save
                              span!= "Save note"
                            a.dropdown-item(href="#")
                              div
                                i.icon-font.icon-export-2
                              span!= "Export"
                            a.dropdown-item(href="#")
                              div
                                i.icon-font.icon-info
                              span!= "Report"
