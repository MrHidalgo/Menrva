---
title: Menrva - Courses remove

contentClassName: p-courses
dataPageName: courses10
login: true
---
extends shared/_layout

block content
  div.body(class!= contentClassName)

    section#c-modal.c-modal.c-modal--removeNote
      .c-modal__wrapper
        .c-modal__header.d-flex.align-items-center
          p.c-modal__title.subtitle!= "Remove course"
          a.c-modal__close(href="#" title="" class="")
            i.icon-font.icon-error

        .c-modal__body
          p.c-modal__subinfo!= "Deleting a course is a PERMANENT action and cannot be undone. Are you sure you want to delete this course? The notes in this course will not be deleted."

          form.form(action="" method="")
            .form__field.form__field--btn
              button.form__btn.form__btn--full(type="submit")!= "Remove"
              button.form__btn.form__btn--full(type="submit")!= "Cancel"