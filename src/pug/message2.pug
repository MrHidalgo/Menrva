---
title: Menrva - Conversation with...

contentClassName: p-messages
dataPageName: message2
---
extends shared/_layout

block content
  div.body.body--start(class!= contentClassName)

    section#section.section
      .c-grid
        .section__wrapper
          .section__wrapper-left
            include ./macros/_menuMessages

          .section__wrapper-right

            .section__title.section__title--messages
              .section__title-wrap
                .section__title-left
                  .section__title-icon
                    i.icon-font.icon-message-unread
                  span!= "Conversation with Sophie McCarthy"

                .section__title-right
                  .c-dropdown.ml-4
                    .dropdown
                      a.dropdown__btn(href="#" id="messagesTitle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        span
                        span
                        span
                      .dropdown-menu.dropdown-menu-right(aria-labelledby="messagesTitle")
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-message-all
                          span!= "Archive"
                        a.dropdown-item(href="#")
                          div
                            i.icon-font.icon-remove
                          span!= "Remove"

            .message
              .message__box.section__block
                .message__block
                  .message__block-left
                    .message__block-user
                      div
                        .message__block-img
                          img(src="./img/img-user-0.png" srcset="./img/img-user-0@2x.png 2x" alt="" title="")
                      div
                        p!= "Olga Griffith"
                        span!= "Lorem Ipsum is simply dummy tex"

                  .message__block-right
                    a(href="#" title="" class="")
                      i.icon-font.icon-recent
                      span!= "1 day ago"

                .message__block.message__block--ml
                  .message__block-left
                    .message__block-user
                      div
                        .message__block-img
                          img(src="./img/img-user-0.png" srcset="./img/img-user-0@2x.png 2x" alt="" title="")
                      div
                        p!= "Olga Griffith"
                        span!= "Lorem Ipsum is simply dummy tex"

                  .message__block-right
                    a(href="#" title="" class="")
                      i.icon-font.icon-recent
                      span!= "1 day ago"


                .message__box-textarea
                  div
                    .message__block-img
                      img(src="./img/img-user-0.png" srcset="./img/img-user-0@2x.png 2x" alt="" title="")

                  div
                    form.form(action="" method="")
                      .form__field.form__field--textarea
                        .form__textarea-wrap
                          textarea.form__textarea(id="" name="" placeholder="Add a comment")
                        .form__notify.form__notify--hide

                      .form__field.form__field--btn
                        button.form__btn.message__box-btn(type="submit")!= "Send"

